generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserApplication {
  id               Int      @id @default(autoincrement())
  name             String
  phoneNumber      String   @unique // 전화번호 중복 방지
  interestedTopics String[] // 최대 3개의 관심 주제 (PostgreSQL에서 배열 지원)
  privacyConsent   Boolean  @default(false) // 개인정보 처리방침 동의
  marketingConsent Boolean  @default(false) // 마케팅 수신 동의
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("user_applications")
}

model UserActivity {
  id         Int      @id @default(autoincrement())
  sessionId  String // 사용자 세션 식별자
  action     String // 수행한 액션 (예: "newsletter_signup", "sample_play")
  trackId    Int? // 재생한 트랙 ID (샘플 재생 시)
  trackTitle String? // 재생한 트랙 제목
  category   String? // 트랙 카테고리
  duration   Int? // 재생 시간 (초)
  userAgent  String? // 사용자 브라우저 정보
  ipAddress  String? // IP 주소 (선택적)
  createdAt  DateTime @default(now())

  @@map("user_activities")
}
